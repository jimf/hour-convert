{
  "name": "hour-convert",
  "version": "1.0.0",
  "description": "Micro library for converting hours between 12-hour and 24-hour formats",
  "main": "index.js",
  "scripts": {
    "coverage": "istanbul cover test/*.js",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "lint": "jshint .",
    "test": "tape test/*.js",
    "validate": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jimf/hour-convert"
  },
  "keywords": [
    "convert",
    "date",
    "datetime",
    "format",
    "hour",
    "time"
  ],
  "author": "Jim Fitzpatrick",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimf/hour-convert/issues"
  },
  "homepage": "https://github.com/jimf/hour-convert",
  "devDependencies": {
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.14",
    "jshint": "^2.7.0",
    "tape": "^4.0.0"
  }
}
